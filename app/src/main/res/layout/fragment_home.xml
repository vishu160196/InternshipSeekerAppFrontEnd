<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/home_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lateral_margin"
        android:layout_marginRight="@dimen/lateral_margin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_text_large" />

    <ScrollView
        android:id="@+id/message_display_scroll_view"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/lateral_margin"
        android:layout_marginRight="@dimen/lateral_margin"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/suggestion_display_layout"
            android:orientation="vertical">

            <!--Suggestions go here-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>